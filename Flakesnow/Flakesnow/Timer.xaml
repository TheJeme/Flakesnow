<Window x:Class="Flakesnow.Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flakesnow"
        mc:Ignorable="d"
        Topmost="True"
        ResizeMode="NoResize"    
        Icon="Resources/timer.ico"
        Title="Timer" Height="190" Width="250" Loaded="Window_Loaded">

    <Grid>
        <StackPanel Margin="0,15,0,10">
            <Label x:Name="TimeLabel" Content="0:0" HorizontalContentAlignment="Center" HorizontalAlignment="Center" FontSize="48"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button x:Name="RestartButton" Content="Restart" Width="60" Margin="5,0" Click="Restart_Click"/>
                <Button x:Name="PauseButton" Content="Pause" Width="60" Height="20" Margin="5,0" Click="Pause_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>